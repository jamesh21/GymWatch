<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="140dp"
    android:id="@+id/gym_content_container">
    <RatingBar
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        style="?android:attr/ratingBarStyleSmall"
        android:theme="@style/RatingBar"
        android:layout_below="@+id/gym_name"
        android:paddingLeft="10dp"
        android:id="@+id/gym_rating"
        android:numStars="5"/>
    <TextView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/gym_address"
        android:textSize="12dp"
        android:paddingLeft="10dp"
        android:layout_below="@id/gym_rating"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/gym_fill"
        android:paddingTop="5dp"
        android:layout_below="@id/gym_address"
        android:textSize="30dp"
        android:paddingLeft="10dp"/>

    <TextView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/gym_name"
        android:paddingTop="10dp"
        android:paddingLeft="10dp"
        android:textSize="20dp"
        android:text="YMCA"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:id="@+id/fill_bar"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight= "20dp" />


    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:paddingTop="10dp"
        android:paddingRight="10dp"
        android:id="@+id/gym_picture"
        android:layout_alignBottom="@+id/gym_fill"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>
