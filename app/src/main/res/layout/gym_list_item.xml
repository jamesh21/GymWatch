<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="140dp"
    android:id="@+id/gym_content_container"
    android:paddingLeft="5dp">
    <RatingBar
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        style="?android:attr/ratingBarStyleSmall"
        android:layout_below="@+id/gym_name"
        android:paddingLeft="10dp"
        android:id="@+id/gym_rating"
        android:numStars="5"/>
    <TextView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/gym_address"
        android:textSize="12dp"
        android:paddingLeft="10dp"
        android:paddingBottom="5dp"
        android:layout_below="@id/gym_rating"
        android:textColor="@color/white_text"/>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/pill"
        android:layout_below="@id/gym_address"
        android:id="@+id/pill"
        android:paddingLeft="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/gym_fill"
            android:textSize="20dp"
            android:paddingLeft="4dp"
            android:textColor="@color/white_text"
            android:layout_centerInParent="true"
            android:gravity="center_vertical"
            />

    </RelativeLayout>


    <TextView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/gym_name"
        android:paddingTop="10dp"
        android:paddingLeft="10dp"
        android:textSize="20dp"
        android:text="YMCA"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="@color/white_text"/>

    <ImageView
        android:layout_width="110dp"
        android:layout_height="120dp"
        android:paddingRight="10dp"
        android:id="@+id/gym_picture"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>
